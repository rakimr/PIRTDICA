entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "xcodebuild", "zlib"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Script"

[[workflows.workflow]]
name = "Run Script"
author = "agent"
mode = "sequential"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scrape_referee_stats.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python etl_referee_stats_agg.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scrape_referee_assignments.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python etl_game_foul_environment.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scrape_player_positions.py"
