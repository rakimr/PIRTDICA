entrypoint = "main.py"
modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "glibcLocales", "libiconv", "rustc", "xcodebuild", "zlib"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Daily DFS Update"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Beat This Lineup"

[[workflows.workflow]]
name = "Daily DFS Update"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_daily_update.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Beat This Lineup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && python -m uvicorn backend.main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
